<div class="container">
    <div class="row" id="city_thumbnails">
        <h2 id="city_title">Cities</h2>
        <% @cities.each do |city| %>
          <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                  <a href="/cities/<%= city.id%>">
                    <img src="<%= city.image %>">
                  </a>
              </div>
          </div>
        <% end %>
    </div>




  <h1>Listing Cities</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Country</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td><%= city.country %></td>
            <td><%= city.user %></td>
            <td><%= link_to 'Show', city %></td>
            <td><%= link_to 'Edit', edit_city_path(city) %></td>
            <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New City', new_city_path %>

</div>






